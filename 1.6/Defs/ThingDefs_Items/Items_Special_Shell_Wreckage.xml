<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- Chemwalker wreckage, dropped on death, can be repaired or broken down -->

    <ThingDef Name="ABF_Thing_Chemwalker_Shell_DamagedBase" ParentName="ResourceBase" Abstract="True">
        <description>This pile of battered and broken armor - little more than scrap - is all but devoid of the sigils and mechanites that once kept it animated. With repairs and sufficient time, though, the unassuming wreckage may once again be a host to a swarm of mechanites in service to a psychic master. It can also be broken down for some salvageable resources.</description>
        <graphicData>
            <texPath>Things/Item/Unfinished/UnfinishedTechArmor</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Standard_Drop</soundInteract>
        <soundDrop>Standard_Drop</soundDrop>
        <techLevel>Medieval</techLevel>
        <stackLimit>1</stackLimit>
        <thingCategories>
            <li>ABF_ThingCategory_Chemwalker_Shells</li>
        </thingCategories>
        <smeltable>true</smeltable>
    </ThingDef>

