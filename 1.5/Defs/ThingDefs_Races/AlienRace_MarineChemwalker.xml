									<li>
										<weight>100</weight>
										<min>RGBA(255, 255, 255, 255)</min>
										<max>RGBA(255, 255, 255, 255)</max>
									</li>
								</options>
							</second>
						</li>
					</colorChannels>
                </alienPartGenerator>
            </generalSettings>
		</alienRace>
